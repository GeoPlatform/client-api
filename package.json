        "@types/jasmine": "~2.8.3",
        "@types/jasminewd2": "~2.0.2",
        "@types/jquery": "^3.3.29",
        "@types/node": "~6.0.60",
        "@types/q": "^1.5.1",
        "axios": "^0.18.0",
        "codelyzer": "^4.0.1",
        "core-js": "^2.4.1",
        "gulp": "^3.9.1",
        "gulp-append-prepend": "^1.0.8",
        "jasmine-core": "~2.8.0",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~2.0.0",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "^1.2.1",
        "karma-jasmine": "~1.1.0",
        "karma-jasmine-html-reporter": "^0.2.2",
        "ng-packagr": "^4.7.0",
        "pre-commit": "^1.2.2",
