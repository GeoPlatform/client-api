    "module": "dist/esm2015/index.js",
    "typings": "dist/index.d.ts",
    "version": "0.3.0",
    "license": "MIT",
    "ngPackage": {
        "name": "Client",
        "moduleName": "Client",
        "amdId": "Client",
        "dest": "dist",
        "lib": {
            "entryFile": "src/index.ts",
            "externals": [
                "q",
                "axios"
            ],
            "umdModuleIds": {
                "q": "Q",
                "axios": "axios"
            },
            "globals": {
                "q": "Q",
                "axios": "axios"
            }
        }
    },
    "whitelistedNonPeerDependencies": [
        "."
    ],
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng-packagr -p package.json",
        "postbuild": "gulp license",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e"
    },
    "pre-commit": [
        "build"
    ],
    "private": true,
    "peerDependencies": {
        "axios": "^0.18.0",
        "q": "1.5.1"
    },
    "devDependencies": {
        "@angular/cli": "~1.7.4",
        "@angular/common": "^5.2.0",
        "@angular/compiler": "^6.1.10",
        "@angular/compiler-cli": "^6.1.10",
        "@angular/core": "^5.2.0",
